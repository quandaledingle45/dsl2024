#include <stdio.h>

int main() {
    int n, i, key, choice, a[100], low, high, mid, f = 0;

    printf("Enter your choice:\n");
    printf("1. Linear Search\n");
    printf("2. Binary Search\n");
    printf("Enter your choice: ");
    scanf("%d", &choice);

    printf("Enter number of students: ");
    scanf("%d", &n);

    if (choice == 2)
        printf("Enter the roll numbers (sorted):\n");
    else
        printf("Enter the roll numbers:\n");

    for (i = 0; i < n; i++)
        scanf("%d", &a[i]);

    printf("Enter the roll number to be searched: ");
    scanf("%d", &key);

    switch (choice) {
        case 1: 
            for (i = 0; i < n; i++) {
                if (a[i] == key) {
                    f = 1;
                    break;
                }
            }
            break;

        case 2:
            low = 0;
            high = n - 1;
            while (low <= high) {
                mid = (low + high) / 2;
                if (a[mid] == key) {
                    f = 1;
                    break;
                } else if (a[mid] < key)
                    low = mid + 1;
                else
                    high = mid - 1;
            }
            break;

        default:
            printf("Invalid choice!\n");
            return 0;
    }

    printf(f ? "\nStudent attended.\n" : "\nStudent not attended.\n");

    return 0;
}
