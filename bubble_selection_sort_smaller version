#include <stdio.h>
int main() {
    float a[100], t; int n, ch;
    printf("Enter number of students: ");
    scanf("%d", &n);
    printf("Enter percentages:\n");
    for (int i = 0; i < n; i++) scanf("%f", &a[i]);
    printf("\n1.Selection Sort\n2.Bubble Sort\nEnter choice: ");
    scanf("%d", &ch);
    for (int i = 0; i < n - 1; i++)
        for (int j = (ch == 1 ? i + 1 : 0); j < (ch == 1 ? n : n - i - 1); j++)
            if ((ch == 1 && a[j] < a[i]) || (ch == 2 && a[j] > a[j + 1])) {
                t = a[ch == 1 ? i : j];
                a[ch == 1 ? i : j] = a[ch == 1 ? j : j + 1];
                a[ch == 1 ? j : j + 1] = t;
            }
    printf("\nSorted percentages:\n");
    for (int i = 0; i < n; i++) printf("%.2f ", a[i]);
    printf("\nTop five scores:\n");
    for (int i = n - 1; i >= n - ((n < 5) ? n : 5); i--) printf("%.2f\n", a[i]);
    return 0;
}
